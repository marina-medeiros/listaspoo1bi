using System;

class MainClass {
  public static void Main (string[] args) {

    Console.WriteLine ("Olá! Eu calcularei quantos anos você terá em 31/12/2020");
    Console.WriteLine ("Para isso, você deve escrever seu aniversário no formato dd/mm/aaaa");

    string data = Console.ReadLine();
    string[] s = data.Split('/');
    int a = int.Parse(s[2]);

    a = 2020 - a;

      Console.WriteLine($"A sua idade em 31/12/2020 é {a} anos!");

  }
}
