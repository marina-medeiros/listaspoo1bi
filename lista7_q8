using System;

class MainClass {
  public static void Main (string[] args) {
    Console.WriteLine ("Digite três valores reais separados por ponto e vírgulas:");
    string valores = Console.ReadLine();
    string[] s = valores.Split(';');
    double v1 = double.Parse(s[0]);
    double v2 = double.Parse(s[1]);
    double v3 = double.Parse(s[2]);

    double soma = v1 + v2 + v3;

    Console.WriteLine($"A soma entre os valores é {soma}");

  }
}
