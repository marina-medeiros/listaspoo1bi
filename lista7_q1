using System;

class MainClass {
  public static void Main (string[] args) {
    Console.WriteLine ("Digite o nome do estado:");
    string estado = Console.ReadLine();
    Console.WriteLine("Digite o número de habitantes:");
    int habitantes = int.Parse(Console.ReadLine());
    Console.WriteLine("Digite a área do estado em Km2:");
    double area = double.Parse(Console.ReadLine());

    double dd = habitantes / area;

    Console.WriteLine($"A densidade demográfica do {estado} é de {dd} hab/Km2");
  }
}
